{
  "name": "idepGolem",
  "version": "1.0.0",
  "description": "MyGolemElectronApp with vendored R",
  "private": true,
  "main": "main.js",
  "author": "Raghavi C Janaswamy",
  "repository": {
    "type": "git",
    "url": "https://github.com/raghaviCJanaswamy/MyGolemElectronApp.git"
  },  
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "tar": "^6.2.1",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "electron": "31.7.7",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.idepGolem",
    "asar": false,
    "files": [
      "main.js",
      "renderer/**",
      "preload/**",
      "package.json",
      "node_modules/**",
      "data/**"
    ],
    "extraResources": [
      { "from": "resources", "to": "." },
      { "from": "runtime", "to": "runtime" },
      { "from": "app", "to": "app" }
    ],
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }],
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage"],
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true
    }
  }
}